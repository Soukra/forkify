const recipeContainer = document.querySelector('.recipe');

const timeout = function (s) {
  return new Promise(function (_, reject) {
    setTimeout(function () {
      reject(new Error(`Request took too long! Timeout after ${s} second`));
    }, s * 1000);
  });
};

// https://forkify-api.herokuapp.com/v2

///////////////////////////////////////

const showRecipe = async function() { // async kw makes a function asynchronous -> async -> try{ await fetch() } catch {}
  try {
    const res = await fetch('https://forkify-api.herokuapp.com/api/v2/recipes/5ed6604591c37cdc054bc886zzzz'); // returns promise to handle
    const data = await res.json(); // .json() returns another promise -> ALWATS AWAIT ALL PROMISES

    console.log(res, data);

    if (!res.ok || data.status === 'fail') throw new Error(`${data.message}`);

  } catch (err) {
    alert(err);
  }
}

showRecipe();